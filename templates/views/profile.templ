package views

import (
	"fmt"
	"glyphtones/database"
	"glyphtones/templates/components"
)

type ProfileData struct {
	Ringtones        []database.RingtoneModel
	NumberOfPages    int
	Page             int
	Author           database.AuthorModel
	LoggedInAuthorId int
}

templ Profile(data ProfileData) {
	<!DOCTYPE html>
	<html lang="en">
		@components.Head("profile.css", fmt.Sprintf("%s on Glyphtones", data.Author.Name), "")
		<body>
			@components.Header(data.LoggedInAuthorId != 0)
			<main>
				if data.Author.ID == data.LoggedInAuthorId {
					@components.AuthorProfile(data.Author.Name, data.Author.Email)
					<h1>Your glyphtones</h1>
				} else {
					<h1>{ data.Author.Name }</h1>
				}
				@components.Preview()
				@components.ListOfRingtones(data.Ringtones, data.NumberOfPages, data.Page, data.LoggedInAuthorId, data.Author.Name, "profile")
			</main>
			@components.Footer()
		</body>
	</html>
}
